<%- include('./partials/header') -%>

<h1>Home</h1>

<p><%= homeStartingContent %></p>
    <% posts.forEach((post)=>{ %>
        <h3><%= post.postTitle %></h3>
        <p>
            <%= post.postContent.substring(0,400)+"..." %>,<a href="/posts/<%= post._id %>">Read More</a>
            <br>
            <u>Published By</u>:<a href="/allposts/<%= post.username %>"><%= post.username %></a>
        </p>
    <% }) %>
<%- include('./partials/footer') -%>
