<%- include('./partials/header') -%>

<h1>Posts By <%= username %></h1>

<p><%= userStartingContent %></p>
<% posts.forEach(post => { %>
    <h3><%= post.postTitle %></h3>
    <p><%= post.postContent.substring(0,500)+"..." %>,<a href="/posts/<%= post._id %>">Read More</a></p>
    <a href="/delete/<%= post._id %>" class="btn btn-danger" role="button" aria-disabled="true">Delete</a>
    <a href="/update/<%= post._id %>" class="btn btn-info" role="button" aria-disabled="true">Update</a>
<% }) %>
<%- include('./partials/footer') -%>